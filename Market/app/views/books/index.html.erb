<div data-role="page">
<p id="notice"><%= notice %></p>
  <div data-role="header">
    <h1>Listing books</h1>
  </div>

<div data-role="content">

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
	<th>Cliente</th>
    <th>Fecha</th>
    <th>Aviso</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.description %></td>
	<td><%= book.person.name %></td>
    <td><%= book.delivery_date.strftime("%m/%d/%Y") %></td>
	<%if (Time.now) >= (book.delivery_date)%>
	<%= link_to 'Send notice', message_book_path(book) %>
	<%end%>
    </td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
</div>

<br />

<%= link_to 'New Book', new_book_path %>
</div>
